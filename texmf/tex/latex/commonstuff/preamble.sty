\RequirePackage[dutch,british]{babel}
\RequirePackage{calligra}

\DeclareOption{dutch}{
    \selectlanguage{dutch}
}
\DeclareOption{british}{
    \selectlanguage{british}
}

\DeclareOption{parindent}{
    \PassOptionsToPackage{skip=0pt,indent=\parindent}{parskip}
}
\DeclareOption{parskip}{
    \PassOptionsToPackage{skip=.5\baselineskip,indent=0pt}{parskip}
}

\DeclareOption{captions}{
    \PassOptionsToPackage{
        margin=20pt,font=small,textfont=sl,labelfont=bf
    }{caption}
}

\DeclareOption{curlyr}{
    \DeclareMathAlphabet{\mathcalligra}{T1}{calligra}{m}{n}
    \DeclareFontShape{T1}{calligra}{m}{n}{<->s*[2.2]callig15}{}
    \newcommand{\scripty}[1]{\ensuremath{\mathcalligra{#1}\,}}
}

\ExecuteOptions{british,parskip}

\ProcessOptions\relax


